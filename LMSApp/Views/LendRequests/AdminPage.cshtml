@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .card {
  
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
}



.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}




.container {
  padding: 2px 16px;
}



</style>

<div class="card">
  
  <div class="container">
    <table class="table">
                <thead class="table-dark">
                <tr>
                    <th scope="col">Lend Id</th>
                    <th scope="col">User Name</th>
                    <th scope="col">Book Name</th>



                   <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    @if(@item.LendStatus == "Requested"){
                    <td> @item.LendId</td>
                    <td>@item.User.UserName</td>
                    <td>@item.Book.BookTitle</td>
                            <td>
                                <form class="btn btn-success" asp-controller="LendRequests" asp-action="RequestApproval" asp-route-lendId=@item.LendId asp-route-bookId=@item.BookId>
                         <input type="submit" value="Approve" class="btn btn-success"></form>
                            <form class="btn btn-success" asp-controller="LendRequests" asp-action="RequestDecline" asp-route-lendId=@item.LendId>
                                <input type="submit" value="Decline" class="btn btn-danger"></form>
                        </td>
                        }
                </tr>
                }
            </tbody>
            </table>
  </div>
</div>