@{
}
@{
    Layout = "~/Views/User/_Layout.cshtml";

}

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
    }



        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }




    .container {
        padding: 2px 16px;
    }

</style>

<div class="card">

    <div class="container">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Lend Id</th>
                    <th scope="col">Book Name</th>
                    <th scope="col">Lend Date</th>
                    <th scope="col">Due Date</th>
                    <th scope="col">Return</th>

                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        
                            <td> @item.LendId</td>
                            <td>@item.Book.BookTitle</td>
                            <td>@item.LendDate</td>
                            <td>@item.ReturnDate</td>
                            <td><form  class="btn btn-success" asp-controller="LendRequests" asp-action="ReturnBook" asp-route-bookId=@item.Book.BookId>
                         <input type="submit" value="Return"/></form></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>